<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".AddCategoryActivity">

    <EditText
            android:id="@+id/edit_text_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:lines="1"
            android:background="@drawable/border_edit_text_background"
            android:ellipsize="end"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:selectAllOnFocus="true"
            android:textSize="32dp"
            android:inputType="text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/edit_text_category_name"
                  app:layout_constraintStart_toStartOf="@+id/edit_text_category_name"
                  app:layout_constraintEnd_toEndOf="@+id/edit_text_category_name">
        <ToggleButton
                android:text="Mo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_button_days_background"
                android:theme="@style/CardView.Light"
                android:id="@+id/button_day_monday"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small" android:textOff="Mo" android:textOn="Mo"/>
        <ToggleButton
                android:text="Tu"
                android:background="@drawable/toggle_button_days_background"
                android:theme="@style/CardView.Dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_tuesday"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small" android:textOff="Tu" android:textOn="Tu"/>

        <ToggleButton
                android:text="We"
                android:background="@drawable/toggle_button_days_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_wednesday"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small" android:textOn="We" android:textOff="We"/>
        <ToggleButton
                android:text="Th"
                android:background="@drawable/toggle_button_days_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_thursday"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small"
                app:layout_constraintVertical_bias="0.0" android:textOn="Th" android:textOff="Th"/>

        <ToggleButton
                android:text="Fr"
                android:background="@drawable/toggle_button_days_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_friday"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small"
                app:layout_constraintVertical_bias="0.0" android:textOn="Fr" android:textOff="Fr"/>
        <ToggleButton
                android:text="Sa"
                android:background="@drawable/toggle_button_days_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_saturday"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small"
                app:layout_constraintVertical_bias="0.0" android:textOn="Sa" android:textOff="Sa"/>

        <ToggleButton
                android:text="Su"
                android:background="@drawable/toggle_button_days_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_day_sunday"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Small"
                app:layout_constraintVertical_bias="0.0" android:layout_marginStart="4dp" android:textOn="Su"
                android:textOff="Su"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>